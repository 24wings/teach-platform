mixin studentCard(student,isLogin)
    .ui.cards
        .card
            .content
                .userCard
                    img(src=student.avatar)
                    .info
                        p #{student.name}
                        p.meta  #{student.gender}
                .description
                    h3.ui.headrr 职位: #{student.job=='teacher'?'教师':'学生'} 
                    h4.ui.header 个性签名  #{student.signature}
                if isLogin
                    .extra.content
                    a 
                        i.home.icon
                        | 主页
                    a.right.floated
                        i.setting.icon
                        | 设置 
                .extra.content
                    a 
                        i.home.icon  
                        |私信
                    a.right.floated
                        i.icon.plus
                        | 加好友